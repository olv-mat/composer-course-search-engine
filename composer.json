{
    "name": "olv-mat/composer-course-search-engine",
    "description": "Project developed during the Composer course on the Alura platform.",
    "type": "library",
    "authors": [
        {
            "name": "Matheus Oliveira",
            "email": "contamatheusprofissional@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.9",
        "symfony/dom-crawler": "^7.1",
        "symfony/css-selector": "^7.1"
    },
    "autoload": {
        "files": [
            "./functions.php"
        ],
        "psr-4": {
            "Project\\SearchEngine\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.4",
        "squizlabs/php_codesniffer": "^3.11",
        "phan/phan": "^5.4"
    },
    "scripts": {
        "ls": "dir",
        "cs": "phpcs --standard=PSR12 src\\",
        "phan": "phan --allow-polyfill-parser",
        "check": [
            "@phan",
            "@cs"
        ],
        "post-update-cmd": [
            "@check"
        ]
    },
    "scripts-descriptions": {
        "check": "Runs phan and phpcs code checks"
    }
}
